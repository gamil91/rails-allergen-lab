<h1><%= @user.name %></h1>

<div>
<h3>Recipes written:</h3>
    <ol>
        <%@user.recipes.each do |r|%>
        <li><%=link_to r.name, r%></li>
        <% end %>
    </ol>
</div>

<div>
    <h3>Allergies:</h3>
    <ul>
        <% @user.allergies.each do |a|%>
            <li><%= link_to a.ingredient.name, a.ingredient%> <%=link_to "(x)", a, method: :delete%></li><br/>
        <% end %>
    </ul>
</div>

<%= link_to "Add an allergy", new_allergy_path%> || 
<%= link_to "Delete User", @user, method: :delete, data:{confirm:"Are you sure you want to delete this user?"}%> ||
<%= link_to "All ingredients", ingredients_path%>
